// prisma/schema.prisma
// =====================================================
// ESQUEMA DE BASE DE DATOS - MUEBLES INDUSTRIALES
// =====================================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =====================================================
// CATEGORÍAS DE PRODUCTOS
// =====================================================
model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  icon        String?   // nombre del ícono de lucide-react
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  products    Product[]

  @@map("categories")
}

// =====================================================
// PRODUCTOS - Edita aquí los muebles disponibles
// Los campos price y active se pueden cambiar fácilmente
// =====================================================
model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  price       Decimal  @db.Decimal(10, 2)  // ← PRECIO: editar en seed.ts o via admin
  imageUrl    String   // URL de la imagen del producto
  images      String[] // Imágenes adicionales (array)
  materials   String[] // ej: ["Madera de pino", "Hierro forjado"]
  dimensions  String?  // ej: "120cm x 60cm x 75cm"
  weight      String?  // ej: "25 kg"
  featured    Boolean  @default(false)
  active      Boolean  @default(true)  // ← para activar/desactivar producto
  stock       Int      @default(0)
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

// =====================================================
// USUARIOS ADMIN - Para futuro panel de administración
// =====================================================
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?   // hash bcrypt
  role          Role      @default(ADMIN)
  image         String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum Role {
  ADMIN
  SUPER_ADMIN
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
